@model QuanLy_PhongTro.ViewModel.DangNhapRequest
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/siteDangNhap.css">
</head>
<body>
    <div class="login-container">
        <img src="~/asset/avatar.png" class="avatar" alt="Avatar">
        <h2>Đăng nhập</h2>
        <div id="toast-container" class="toast-container"></div>

        <form id="loginForm" method="POST">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <input type="hidden" asp-for="Captcha" />

            <div class="input-group">
                <label for="username">Email</label>
                <div class="input-wrapper">
                    <i class="fas fa-envelope input-icon"></i>
                    <input type="text" id="username" name="email" placeholder="Nhập tên email đăng nhập" required>
                </div>
                <span id="emailError" class="form-error"></span>
            </div>

            <div class="input-group">
                <label for="password">Mật khẩu</label>
                <div class="password-wrapper">
                    <i class="fas fa-lock input-icon"></i>
                    <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required>
                    <span class="toggle-password" id="togglePassword">
                        <i class="fas fa-eye"></i>
                    </span>
                </div>
                <span id="passwordError" class="form-error"></span>
            </div>

            <div id="recaptcha"></div>
            <span id="captchaError" class="form-error"></span>

            <button type="submit" id="loginButton" class="login-btn">Đăng nhập</button>

            <p class="forgot-pass">
                <a asp-controller="QuenMatKhau" asp-action="Index">Quên mật khẩu?</a>
            </p>

            <div class="divider">
                <span class="divider-line"></span>
                <span class="divider-text">Hoặc</span>  
                <span class="divider-line"></span>
            </div>

            <a asp-action="LoginByGoogle" asp-controller="DangNhap" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="google-login-btn" id="googleLogin">
                <img src="https://www.google.com/images/branding/googleg/1x/googleg_standard_color_128dp.png" alt="Google logo" class="google-icon">
                Đăng nhập bằng Google
            </a>

            <p class="register-text">
                Không có tài khoản? <a asp-controller="DangKy" asp-action="Index">Đăng ký ngay</a>
            </p>
        </form>
    </div>

    @section Scripts{
        <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
                async defer>
        </script>
        <script src="~/js/siteDangNhap.js"></script>
        <script>
            var onloadCallback = function () {
                try {
                    grecaptcha.render('recaptcha', {
                        'sitekey': '6LcfSz4rAAAAAFVqX0lm3Y49Eim3vXoKWuIGeMCM',
                        'callback': function (response) {
                            console.log("reCAPTCHA response:", response);
                            $('#Captcha').val(response);
                        }
                    });
                    console.log("reCAPTCHA rendered successfully");
                } catch (error) {
                    console.error("Error rendering reCAPTCHA:", error);
                }
            };
        </script>

        document.addEventListener('DOMContentLoaded', function () {
        @if (TempData["success"] != null)
        {
            <text>
                showToast('@TempData["success"]', 'success');
            </text>
        }
        @if (TempData["error"] != null)
        {
            <text>
                showToast('@TempData["error"]', 'error');
            </text>
        }
    });

    }
</body>
</html>