@model QuanLy_PhongTro.ViewModel.PhongTroNguoiDungViewModel
@using System.Linq

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Quản lý phòng trọ</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/siteAdmin.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

</head>
<body>  
    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <h2>Admin Panel</h2>
            </div>
            <ul class="menu">
                <li class="active">
                    <a href="#" data-section="room-list-section">
                        <i class="fas fa-door-open"></i>
                        <span>Quản lý phòng</span>
                    </a>
                    <ul class="submenu">
                        <li>
                            <a href="#" class="submenu-link active" data-section="room-list-section">Danh sách phòng</a>
                        </li>
                        <li>
                            <a href="#" class="submenu-link" data-section="room-type-section">Quản lý loại phòng</a>
                        </li>
                        <li>
                            <a href="#" class="submenu-link" data-section="equipment-section">Quản lý thiết bị</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" data-section="user-section">
                        <i class="fas fa-users"></i>
                        <span>Quản lý người dùng</span>
                    </a>
                </li>
                <li>
                    <a href="#" data-section="settings-section">
                        <i class="fa-regular fa-address-book"></i>
                        <span>Quản lý Hợp đồng</span>
                    </a>
                </li>
                <li>
                    <a href="#" data-section="invoice-section">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Quản lý Hóa đơn</span>
                    </a>
                </li>
                <li>
                    <a href="#" data-section="issues-section">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Báo cáo sự cố</span>
                    </a>
                </li>
                <li>
                    <a href="#" data-section="news-section">
                        <i class="fa-solid fa-newspaper"></i>
                        <span>Tin Tức</span>
                    </a>
                </li>
                <li>
                    <a href="#" data-section="revenue-section">
                        <i class="fas fa-chart-line"></i>
                        <span>Doanh Thu</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Views" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Thoát</span>
                    </a>
                </li>
            </ul>
        </div>
   

        <!-- Main Content -->
        <div class="main-content">
            <header class="header">
                <div class="header-title">
                    <h1>Quản lý phòng trọ</h1>
                </div>
                <div class="user-info">
                    <img src="~/asset/avatar.png" alt="User">
                    <span>Admin</span>
                </div>
            </header>

            <div class="content">

                

                <!-- Danh sách phòng -->
                <div class="room-list-section section-active">
                    <div class="action-bar">
                        <button id="btn-add-room" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm phòng mới
                        </button>
                        <div class="search-box">
                            <input type="text" id="search-room-input" placeholder="Nhập tên phòng hoặc loại phòng">
                            <button id="search-room-btn"><i class="fas fa-search"></i></button>
                            <button id="reset-search-btn" style="display: none;"><i class="fas fa-times"></i></button>
                        </div>
                    </div>

                    <div class="room-list">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">ID Phòng</th>
                                    <th scope="col">Loại Phòng</th>
                                    <th scope="col">Tên Phòng</th>
                                    <th scope="col">Địa Chỉ</th>
                                    <th scope="col">Thiết bị</th>
                                    <th scope="col">Diện tích</th>
                                    <th scope="col">Tiền điện</th>
                                    <th scope="col">Tiền nước</th>
                                    <th scope="col">Giá thuê</th>
                                    <th scope="col">Trạng thái</th>
                                    <th scope="col">Hình đại diện</th>
                                    <th scope="col">Mô tả</th>
                                    <th scope="col">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.PhongTros != null && Model.PhongTros.Any())
                                {
                                    int stt = 1;
                                    @foreach (var item in Model.PhongTros)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>@item.MaPhong</td>
                                            <td>@(item.LoaiPhong?.TenLoaiPhong ?? "Không xác định")</td>
                                            <td>@(item.TenPhong ?? "Không có tên")</td>
                                            <td>@(item.DiaChi ?? "Không có địa chỉ")</td>
                                            <td>
                                                <ul class="thiet-bi-list">
                                                    @if (item.PhongTroThietBis != null && item.PhongTroThietBis.Any())
                                                    {
                                                        @foreach (var thietBi in item.PhongTroThietBis)
                                                        {
                                                            <li>@(thietBi.ThietBi?.TenThietBi ?? "Không xác định") (Số lượng: @thietBi.SoLuong)</li>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <li>Không có thiết bị</li>
                                                    }
                                                </ul>
                                            </td>
                                            <td>@(item.DienTich)</td>
                                            <td>@(item.TienDien.ToString("N0"))</td>
                                            <td>@(item.TienNuoc.ToString("N0"))</td>
                                            <td>@(item.GiaThue.ToString("N0"))</td>
                                            <td>@(item.TrangThai ?? "Không xác định")</td>
                                            <td>
                                                @if (item.AnhPhongTros != null && item.AnhPhongTros.Any(a => a.LaAnhDaiDien))
                                                {
                                                    var anhDaiDien = item.AnhPhongTros.FirstOrDefault(a => a.LaAnhDaiDien);
                                                    <img src="@Url.Content("~/asset/" + anhDaiDien.DuongDan)" alt="Hình đại diện" class="anh-dai-dien" />
                                                }
                                                else
                                                {
                                                    <span>Không có ảnh</span>
                                                }
                                            </td>
                                            <td>@(item.MoTa ?? "Không có mô tả")</td>
                                            <td>
                                                <button type="button" class="btn btn-warning btn-sm btn-update-room" data-id="@item.MaPhong">Sửa</button>
                                                <button type="button" class="btn btn-danger btn-sm btn-delete-room" data-id="@item.MaPhong">Xóa</button>
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="13" class="text-center">Không có phòng trọ nào để hiển thị.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="pagination-container">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item" id="prev-page"><a class="page-link" href="#">Previous</a></li>
                                    <!-- Các trang sẽ được tạo động bằng JS -->
                                    <li class="page-item" id="next-page"><a class="page-link" href="#">Next</a></li>
                                </ul>
                            </nav>
                            <div class="total-count"> <span id="total-room-count"></span> bản ghi (<span id="room-items-per-page">5</span>/trang)</div>
                        </div>

                    </div>
                </div>

                <!-- Quản lý loại phòng -->
                <div class="room-type-section">
                    <div class="action-bar">
                        <button id="btn-add-room-type" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm loại phòng
                        </button>
                    </div>

                    <div class="room-type-list">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Mã loại phòng</th>
                                    <th scope="col">Tên loại Phòng</th>
                                    <th scope="col">Mô tả</th>
                                    <th scope="col">Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="room-type-list-body">
                                <!-- Danh sách loại phòng sẽ được tải động bằng JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Quản lý thiết bị -->
                <div class="equipment-section">
                    <div class="action-bar">
                        <button id="btn-add-equipment" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm thiết bị
                        </button>
                    </div>

                    <div class="equipment-list">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Mã thiết bị</th>
                                    <th scope="col">Tên thiết Bị</th>
                                    <th scope="col">Mô tả</th>
                                    <th scope="col">Trình trạng</th>
                                    <th scope="col">Đơn vị</th>
                                    <th scope="col">Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="equipment-list-body">
                                <!-- Danh sách thiết bị sẽ được tải động bằng JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Quản lý người dùng -->
                <div class="user-section">
                    <div class="action-bar">
                        <button id="btn-add-user" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm người dùng mới
                        </button>
                        <div class="search-box">
                            <input type="text" id="search-user-input" placeholder="Tìm kiếm theo tên hoặc email...">
                            <button id="search-user-btn"><i class="fas fa-search"></i></button>
                            <button id="reset-user-search-btn" style="display: none;"><i class="fas fa-times"></i></button>
                        </div>
                    </div>

                    <div class="user-list">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">ID Người dùng</th>
                                    <th scope="col">Họ tên</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Số điện thoại</th>
                                    <th scope="col">Quyền</th>
                                    <th scope="col">Ngày tạo</th>
                                    <th scope="col">Trạng thái</th>
                                    <th scope="col">Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="user-list-body">
                                @if (Model.NguoiDungs != null && Model.NguoiDungs.Any())
                                {
                                    int stt = 1;
                                    @foreach (var item in Model.NguoiDungs)
                                    {
                                        <tr>
                                            <td>@stt</td>
                                            <td>@item.MaNguoiDung</td>
                                            <td>@item.HoTen</td>
                                            <td>@item.Email</td>
                                            <td>@item.SoDienThoai</td>
                                            <td>@(item.PhanQuyen?.TenQuyen ?? "Chưa xác định")</td>
                                            <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>@(item.IsDeleted ? "Ngừng hoạt động" : "Hoạt động")</td>
                                            <td>
                                                <button type="button" class="btn btn-warning btn-sm btn-update-user" data-id="@item.MaNguoiDung">
                                                    <i class="fas fa-edit"></i> Sửa
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm btn-delete-user" data-id="@item.MaNguoiDung">
                                                    <i class="fas fa-trash-alt"></i> Xóa
                                                </button>
                                            </td>
                                        </tr>
                                        stt++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="13" class="text-center">Không có người dùng nào để hiển thị.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="pagination-container">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item" id="prev-page"><a class="page-link" href="#">Previous</a></li>
                                    <!-- Các trang sẽ được tạo động bằng JS -->
                                    <li class="page-item" id="next-page"><a class="page-link" href="#">Next</a></li>
                                </ul>
                            </nav>
                            <div class="total-count">Tổng: <span id="total-user-count"></span> bản ghi (<span id="user-items-per-page">10</span>/trang)</div>
                        </div>
                    </div>
                </div>

                <!-- Modal thêm/sửa người dùng -->
                <div id="user-modal" class="modal">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 id="user-modal-title">Thêm người dùng mới</h2>
                            <span class="close">×</span>
                        </div>
                        <div class="modal-body">
                            <form id="user-form" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="user-fullname">Họ tên</label>
                                    <input type="text" id="user-fullname" name="HoTen" required>
                                </div>
                                <div class="form-group">
                                    <label for="user-email">Email</label>
                                    <input type="email" id="user-email" name="Email" required>
                                </div>
                                <div class="form-group">
                                    <label for="user-phone">Số điện thoại</label>
                                    <input type="text" id="user-phone" name="SoDienThoai" required>
                                </div>
                                <div class="form-group">
                                    <label for="user-password">Mật khẩu</label>
                                    <input type="password" id="user-password" name="MatKhau" required>
                                </div>
                                <div class="form-group">
                                    <label for="user-role">Quyền</label>
                                    <select id="user-role" name="MaQuyen" required>
                                        <option value="">Chọn quyền</option>
                                        @if (Model.PhanQuyens != null && Model.PhanQuyens.Any())
                                        {
                                            @foreach (var item in Model.PhanQuyens)
                                            {
                                                <option value="@item.MaQuyen"> @item.TenQuyen</option>
                                            }
                                        }
                                        else
                                        {
                                            <p>Không có dữ liệu loại phòng.</p>
                                        }
                                        
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="user-status">Trạng thái</label>
                                    <select id="user-status" name="IsDeleted">
                                        <option value="false">Hoạt động</option>
                                        <option value="true">Ngừng hoạt động</option>
                                    </select>
                                </div>
                                <div class="modal-footer">
                                    <div class="form-actions">
                                        <button type="button" class="btn btn-secondary" id="user-btn-cancel">Hủy</button>
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Quản lý hợp đồng -->
                <div class="settings-section">
                    <div class="action-bar">
                        <button id="btn-add-hopdong" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm hợp đồng mới
                        </button>
                        <div class="search-box">
                            <input type="text" id="search-hopdong-input" placeholder="Tìm kiếm theo mã hợp đồng, tên người dùng...">
                            <button id="search-hopdong-btn"><i class="fas fa-search"></i></button>
                            <button id="reset-hopdong-search-btn" style="display: none;"><i class="fas fa-times"></i></button>
                        </div>
                    </div>

                    <div class="hopdong-list">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Mã Hợp Đồng</th>
                                    <th scope="col">Mã Phòng</th>
                                    <th scope="col">Tên Phòng</th>
                                    <th scope="col">Tên Người Dùng</th>
                                    <th scope="col">Ngày Bắt Đầu</th>
                                    <th scope="col">Ngày Kết Thúc</th>
                                    <th scope="col">Tiền Cọc (VNĐ)</th>
                                    <th scope="col">Trạng Thái</th>
                                    <th scope="col">Thanh toán</th>
                                    <th scope="col">Ngày Ký</th>
                                    <th scope="col">Ghi Chú</th>
                                    <th scope="col">Hành động</th>
                                </tr>
                            </thead>
                            <tbody id="hopdong-list-body">   
                            </tbody>
                        </table>
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center" id="pagination">
                                <!-- Các nút phân trang sẽ được tạo động -->
                            </ul>
                        </nav>
                    </div>
                </div>
                <!-- Hóa đơn -->
                <div class="invoice-section">
                    
                        <div class="action-bar">
                        <button id="btn-add-hoadon" class="btn btn-primary" onclick="openAddHoaDonModal()">
                                <i class="fas fa-plus"></i> Thêm hóa đơn mới
                            </button>
                            <div class="search-box">
                                <input type="text" id="search-hoadon-input" placeholder="Tìm kiếm theo mã hóa đơn, mã hợp đồng...">
                                <button id="search-hoadon-btn"><i class="fas fa-search"></i></button>
                                <button id="reset-hoadon-search-btn" style="display: none;"><i class="fas fa-times"></i></button>
                            </div>
                        </div>

                        <div class="hoadon-list">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">STT</th>
                                        <th scope="col">Mã Hóa Đơn</th>
                                        <th scope="col">Mã Hợp Đồng</th>
                                        <th scope="col">Tháng</th>
                                        <th scope="col">Năm</th>
                                        <th scope="col">Tiền Điện</th>
                                        <th scope="col">Tiền Nước</th>
                                        <th scope="col">Tiền Rác</th>
                                        <th scope="col">Tổng Tiền</th>
                                        <th scope="col">Ngày Tạo</th>
                                        <th scope="col">Trạng Thái</th>
                                        <th scope="col">Hành động</th>
                                    </tr>
                                </thead>
                                <tbody id="hoadon-list-body">
                                </tbody>
                            </table>
                            
                        </div>
                     
                </div>
                <div class="revenue-section">
                    <div class="action-barDT">
                        <div class="filter-box">
                            <div class="date-wrapper">
                                <label for="start-date" class="date-label">Từ ngày</label>
                                <input type="date" class="date-input" id="start-date" name="start-date" />
                            </div>
                            <div class="date-wrapper">
                                <label for="end-date" class="date-label">Đến ngày</label>
                                <input type="date" class="date-input" id="end-date" name="end-date" />
                            </div>
                            <div class="date-select">
                                <button type="button" id="1monthAgo" class="date-button">1 tháng trước</button>
                                <button type="button" id="1yearAgo" class="date-button">1 năm trước</button>
                            </div>
                            <select class="filter-select" id="revenue-method">
                                <option value="revenue-booking">Doanh thu hợp đồng</option>
                                <option value="revenue-receipt">Doanh thu hóa đơn</option>
                            </select>
                        </div>
                    </div>
                    <div class="show-revenue">
                        <div class="revenue-item">
                            <span class="revenue-label">Tổng khách hàng</span>
                            <input type="text" class="revenue-input" id="total-customers" value="@(Model.Revenue != null ? Model.Revenue.TotalCustomers : 0)" readonly>
                        </div>
                        <div class="revenue-item">
                            <span class="revenue-label">Tổng phòng</span>
                            <input type="text" class="revenue-input" id="total-rooms" value="@(Model.Revenue != null ? Model.Revenue.TotalRooms : 0)" readonly>
                        </div>
                        <div class="revenue-item">
                            <span class="revenue-label">Tổng hợp đồng</span>
                            <input type="text" class="revenue-input" id="total-contracts" value="@(Model.Revenue != null ? Model.Revenue.TotalContracts : 0)" readonly>
                        </div>
                    </div>
                    <div class="charts-container">
                        <div class="revenue-column full-width">
                            <h3>Doanh thu theo thời gian</h3>
                            <canvas id="column-data" ></canvas>
                        </div>
                        <div class="revenue-pie-chart">
                            <h3>Phân bố hợp đồng theo loại phòng</h3>
                            <canvas id="pieChart"></canvas>
                        </div>
                    </div>
                </div>

               <!-- Báo cáo sự cố -->
                <div class="issues-section">
                    <h2>Báo cáo sự cố</h2>

                    <!-- Action Bar with Search -->
                    <div class="action-barIssues mb-3">
                        <div class="search-box">
                            <input type="text" id="search-issues-input" placeholder="Tìm kiếm theo tên phòng, loại sự cố...">
                            <button id="search-issues-btn"><i class="fas fa-search"></i> Tìm kiếm</button>
                            <button id="reset-issues-search-btn" style="display: none;"><i class="fas fa-times"></i> Xóa</button>
                        </div>
                    </div>

                    <!-- Navigation Filter -->
                    <div class="filter-nav mb-3">
                        <label>Lọc theo thời gian:</label>
                        <div class="btn-group mx-2">
                            <button id="sort-latest" class="btn btn-outline-primary active" data-sort="latest">Gần nhất</button>
                            <button id="sort-earliest" class="btn btn-outline-primary" data-sort="earliest">Xa nhất</button>
                        </div>

                        <label>Lọc theo trạng thái:</label>
                        <div class="btn-group mx-2">
                            <button id="filter-all" class="btn btn-outline-primary active" data-filter="all">Tất cả</button>
                            <button id="filter-unresolved" class="btn btn-outline-primary" data-filter="unresolved">Chưa xử lý</button>
                            <button id="filter-resolved" class="btn btn-outline-primary" data-filter="resolved">Đã xử lý</button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="issues-list">
